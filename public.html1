              <i class="fas fa-box-open" style="font-size: 30px;"></i>
              <p>No hay publicaciones</p>
            </div>
          `;
          return;
        }
        
        // Ordenar por fecha (más reciente primero)
        userPosts.sort((a, b) => {
          const dateA = a.timestamp?.toDate() || new Date(0);
          const dateB = b.timestamp?.toDate() || new Date(0);
          return dateB - dateA;
        });
        
        // Mostrar publicaciones en el grid
        userPosts.forEach(post => {
          const postKey = `${post.type}_${post.id}`;
          const hasLike = likedPosts.has(postKey);
          
          if (post.type === 'gallos') {
            postsGrid.innerHTML += `
              <div class="profile-post" onclick="showPostModal(${JSON.stringify(post).replace(/"/g, '&quot;')})">
                <img src="${post.mediaUrl}" alt="${post.title}" onerror="this.onerror=null;this.src='img/default-image.jpg'">
                ${hasLike ? '<div class="like-indicator"><i class="fas fa-heart"></i></div>' : ''}
              </div>
            `;
          } else {
            postsGrid.innerHTML += `
              <div class="profile-post" onclick="showPostModal(${JSON.stringify(post).replace(/"/g, '&quot;')})">
                <video>
                  <source src="${post.mediaUrl}#t=0.1" type="video/mp4">
                </video>
                <div class="video-icon">
                  <i class="fas fa-play"></i>
                </div>
                ${hasLike ? '<div class="like-indicator"><i class="fas fa-heart"></i></div>' : ''}
              </div>
            `;
          }
        });
      } catch (error) {
        console.error("Error al cargar publicaciones del perfil:", error);
        postsGrid.innerHTML = `
          <div style="grid-column: 1 / -1; text-align: center; padding: 40px; color: var(--text-gray);">
            <i class="fas fa-exclamation-triangle" style="font-size: 30px;"></i>
            <p>Error al cargar publicaciones</p>
          </div>
        `;
      }
    }

    // Mostrar vista de perfil
    function showProfileView() {
      document.getElementById('postsContainer').style.display = 'none';
      document.getElementById('profileContainer').style.display = 'block';
      
      // Mostrar sección de publicaciones por defecto
      showProfilePosts();
    }

    // Mostrar vista de publicaciones
    function showPostsView() {
      document.getElementById('profileContainer').style.display = 'none';
      document.getElementById('postsContainer').style.display = 'flex';
    }

    // Mostrar publicaciones en el perfil
    function showProfilePosts() {
      document.getElementById('profilePostsGrid').style.display = 'grid';
      document.getElementById('profileFollowersList').style.display = 'none';
      document.getElementById('profileFollowingList').style.display = 'none';
      document.getElementById('profileSectionTitle').textContent = 'Publicaciones';
    }

    // Mostrar seguidores en el perfil
    async function showProfileFollowers() {
      const followersList = document.getElementById('profileFollowersList');
      followersList.style.display = 'block';
      document.getElementById('profilePostsGrid').style.display = 'none';
      document.getElementById('profileFollowingList').style.display = 'none';
      document.getElementById('profileSectionTitle').textContent = 'Seguidores';
      
      try {
        const followersSnapshot = await db.collection('followers')
          .doc(currentProfileUserId)
          .collection('userFollowers')
          .get();
        
        if (followersSnapshot.empty) {
          followersList.innerHTML = '<p style="color: var(--text-gray); text-align: center;">No tiene seguidores</p>';
          return;
        }
        
        // Obtener datos de cada seguidor
        const followersData = await Promise.all(
          followersSnapshot.docs.map(async doc => {
            let userData = userCache[doc.id];
            if (!userData) {
              const userDoc = await db.collection('users').doc(doc.id).get();
              if (userDoc.exists) {
                userData = userDoc.data();
                userCache[doc.id] = userData;
              } else {
                userData = {
                  displayName: 'Usuario',
                  photoURL: 'img/default-profile.jpg',
                  email: ''
                };
              }
            }
            return { ...userData, userId: doc.id };
          })
        );
        
        followersList.innerHTML = followersData.filter(user => user !== null).map(user => `
          <div style="display: flex; align-items: center; gap: 10px; padding: 10px; border-bottom: 1px solid rgba(255,255,255,0.1);">
            <img src="${user.photoURL}" 
                 alt="Perfil" 
                 style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover; cursor: pointer;"
                 onclick="viewUserProfile('${user.userId}')">
            <div style="flex: 1; cursor: pointer;" onclick="viewUserProfile('${user.userId}')">
              <div style="font-weight: bold;">${user.displayName}</div>
              <div style="font-size: 12px; color: var(--text-gray);">${user.email}</div>
            </div>
            ${user.userId !== currentUser.uid ? 
              `<button class="follow-btn" id="followerFollowBtn-${user.userId}" 
                onclick="toggleFollow('${user.userId}', this)" style="padding: 5px 10px;">
                <i class="fas fa-user-plus"></i> Seguir
              </button>` : ''
            }
          </div>
        `).join('');
        
        // Configurar botones de seguir
        followersData.forEach(user => {
          if (user && user.userId !== currentUser.uid) {
            setupFollowButton(user.userId, `followerFollowBtn-${user.userId}`);
          }
        });
      } catch (error) {
        console.error("Error al cargar seguidores:", error);
        followersList.innerHTML = '<p style="color: var(--text-gray); text-align: center;">Error al cargar seguidores</p>';
      }
    }

    // Mostrar seguidos en el perfil
    async function showProfileFollowing() {
      const followingList = document.getElementById('profileFollowingList');
      followingList.style.display = 'block';
      document.getElementById('profilePostsGrid').style.display = 'none';
      document.getElementById('profileFollowersList').style.display = 'none';
      document.getElementById('profileSectionTitle').textContent = 'Seguidos';
      
      try {
        const followingSnapshot = await db.collection('followers')
          .doc(currentProfileUserId)
          .collection('userFollowing')
          .get();
        
        if (followingSnapshot.empty) {
          followingList.innerHTML = '<p style="color: var(--text-gray); text-align: center;">No sigue a nadie</p>';
          return;
        }
        
        // Obtener datos de cada usuario seguido
        const followingData = await Promise.all(
          followingSnapshot.docs.map(async doc => {
            let userData = userCache[doc.id];
            if (!userData) {
              const userDoc = await db.collection('users').doc(doc.id).get();
              if (userDoc.exists) {
                userData = userDoc.data();
                userCache[doc.id] = userData;
              } else {
                userData = {
                  displayName: 'Usuario',
                  photoURL: 'img/default-profile.jpg',
                  email: ''
                };
              }
            }
            return { ...userData, userId: doc.id };
          })
        );
        
        followingList.innerHTML = followingData.filter(user => user !== null).map(user => `
          <div style="display: flex; align-items: center; gap: 10px; padding: 10px; border-bottom: 1px solid rgba(255,255,255,0.1);">
            <img src="${user.photoURL}" 
                 alt="Perfil" 
                 style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover; cursor: pointer;"
                 onclick="viewUserProfile('${user.userId}')">
            <div style="flex: 1; cursor: pointer;" onclick="viewUserProfile('${user.userId}')">
              <div style="font-weight: bold;">${user.displayName}</div>
              <div style="font-size: 12px; color: var(--text-gray);">${user.email}</div>
            </div>
            ${user.userId !== currentUser.uid ? 
              `<button class="follow-btn" id="followingFollowBtn-${user.userId}" 
                onclick="toggleFollow('${user.userId}', this)" style="padding: 5px 10px;">
                <i class="fas fa-user-plus"></i> Seguir
              </button>` : ''
            }
          </div>
        `).join('');
        
        // Configurar botones de seguir
        followingData.forEach(user => {
          if (user && user.userId !== currentUser.uid) {
            setupFollowButton(user.userId, `followingFollowBtn-${user.userId}`);
          }
        });
      } catch (error) {
        console.error("Error al cargar seguidos:", error);
        followingList.innerHTML = '<p style="color: var(--text-gray); text-align: center;">Error al cargar seguidos</p>';
      }
    }

    // Configurar botón de seguir
    async function setupFollowButton(userId, buttonId = null) {
      const button = buttonId ? 
        document.getElementById(buttonId) : 
        document.getElementById(`followBtn-${userId}`);
      
      if (!button) return;
      
      // Verificar si ya seguimos a este usuario
      const followDoc = await db.collection('followers')
        .doc(userId)
        .collection('userFollowers')
        .doc(currentUser.uid)
        .get();
      
      if (followDoc.exists) {
        // Ya lo seguimos
        button.innerHTML = '<i class="fas fa-user-check"></i> Siguiendo';
        button.className = 'follow-btn btn-following';
      } else {
        // No lo seguimos
        button.innerHTML = '<i class="fas fa-user-plus"></i> Seguir';
        button.className = 'follow-btn btn-follow';
      }
    }

    // Alternar seguir/dejar de seguir
    async function toggleFollow(userId, button) {
      try {
        const isFollowing = button.classList.contains('btn-following');
        
        if (!isFollowing) {
          // Seguir al usuario
          await db.collection('followers')
            .doc(userId)
            .collection('userFollowers')
            .doc(currentUser.uid)
            .set({
              userId: currentUser.uid,
              timestamp: firebase.firestore.FieldValue.serverTimestamp()
            });
          
          // Agregar a nuestra lista de seguidos
          await db.collection('followers')
            .doc(currentUser.uid)
            .collection('userFollowing')
            .doc(userId)
            .set({
              userId: userId,
              timestamp: firebase.firestore.FieldValue.serverTimestamp()
            });
          
          // Actualizar UI
          button.innerHTML = '<i class="fas fa-user-check"></i> Siguiendo';
          button.className = 'follow-btn btn-following';
          
          // Actualizar contador si estamos viendo el perfil
          if (currentProfileUserId === userId) {
            const currentCount = parseInt(document.getElementById('profileFollowersCount').textContent);
            document.getElementById('profileFollowersCount').textContent = currentCount + 1;
          }
          
          showNotification('Ahora sigues a este usuario', 'success');
        } else {
          // Dejar de seguir
          await db.collection('followers')
            .doc(userId)
            .collection('userFollowers')
            .doc(currentUser.uid)
            .delete();
            
          await db.collection('followers')
            .doc(currentUser.uid)
            .collection('userFollowing')
            .doc(userId)
            .delete();
          
          // Actualizar UI
          button.innerHTML = '<i class="fas fa-user-plus"></i> Seguir';
          button.className = 'follow-btn btn-follow';
          
          // Actualizar contador si estamos viendo el perfil
          if (currentProfileUserId === userId) {
            const currentCount = parseInt(document.getElementById('profileFollowersCount').textContent);
            document.getElementById('profileFollowersCount').textContent = Math.max(0, currentCount - 1);
          }
          
          showNotification('Has dejado de seguir a este usuario', 'success');
        }
        
        // Actualizar botones en todas las publicaciones de este usuario
        document.querySelectorAll(`#followBtn-${userId}`).forEach(btn => {
          btn.innerHTML = isFollowing ? 
            '<i class="fas fa-user-plus"></i> Seguir' : 
            '<i class="fas fa-user-check"></i> Siguiendo';
          btn.className = isFollowing ? 
            'follow-btn btn-follow' : 
            'follow-btn btn-following';
        });
      } catch (error) {
        console.error("Error al actualizar seguimiento:", error);
        showNotification('Error al actualizar seguimiento', 'error');
      }
    }

    // Alternar like en una publicación
    async function toggleLike(postType, postId, button) {
      try {
        const collectionName = getCollectionName(postType);
        const postRef = db.collection(collectionName).doc(postId);
        const postKey = `${postType}_${postId}`;
        
        if (likedPosts.has(postKey)) {
          // Quitar like
          await postRef.update({
            likes: firebase.firestore.FieldValue.arrayRemove(currentUser.uid)
          });
          
          likedPosts.delete(postKey);
          button.innerHTML = '<i class="fas fa-heart"></i> Me gusta';
          button.querySelector('i').classList.remove('liked');
        } else {
          // Dar like
          await postRef.update({
            likes: firebase.firestore.FieldValue.arrayUnion(currentUser.uid)
          });
          
          likedPosts.add(postKey);
          button.innerHTML = '<i class="fas fa-heart liked"></i> Me gusta';
          button.querySelector('i').classList.add('liked');
        }
        
        // Actualizar contador
        const statsElement = button.closest('.post-footer').querySelector('.post-stats');
        const likesCount = parseInt(statsElement.textContent.match(/\d+/)[0]);
        statsElement.innerHTML = `
          <span><i class="fas fa-heart"></i> ${likedPosts.has(postKey) ? likesCount + 1 : likesCount - 1} likes</span>
          ${statsElement.innerHTML.includes('comentarios') ? 
            statsElement.innerHTML.split('</span>')[1] : ''}
        `;
        
        // Actualizar en el modal si está abierto
        if (currentModalPost && currentModalPost.id === postId && currentModalPost.type === postType) {
          const modalLikeBtn = document.getElementById('postModalLikeBtn');
          const modalLikesCount = document.getElementById('postModalLikes');
          
          if (likedPosts.has(postKey)) {
            modalLikeBtn.innerHTML = '<i class="fas fa-heart liked"></i> Me gusta';
            modalLikesCount.textContent = parseInt(modalLikesCount.textContent) + 1;
          } else {
            modalLikeBtn.innerHTML = '<i class="fas fa-heart"></i> Me gusta';
            modalLikesCount.textContent = parseInt(modalLikesCount.textContent) - 1;
          }
        }
        
        // Actualizar en el perfil si está visible
        if (currentProfileUserId) {
          const profilePost = document.querySelector(`.profile-post[onclick*="${postId}"]`);
          if (profilePost) {
            if (likedPosts.has(postKey)) {
              if (!profilePost.querySelector('.like-indicator')) {
                profilePost.innerHTML += '<div class="like-indicator"><i class="fas fa-heart"></i></div>';
              }
            } else {
              const indicator = profilePost.querySelector('.like-indicator');
              if (indicator) {
                indicator.remove();
              }
            }
          }
        }
        
      } catch (error) {
        console.error("Error al actualizar like:", error);
        showNotification('Error al actualizar like', 'error');
      }
    }

    // Alternar sección de comentarios
    async function toggleComments(postType, postId, button) {
      const commentsSection = document.getElementById(`comments-${postId}`);
      
      if (commentsSection.style.display === 'block') {
        commentsSection.style.display = 'none';
      } else {
        commentsSection.style.display = 'block';
        loadComments(postType, postId);
      }
    }

    // Cargar comentarios
    async function loadComments(postType, postId) {
      const commentsList = document.getElementById(`commentsList-${postId}`);
      commentsList.innerHTML = '<div style="text-align: center; padding: 10px;"><i class="fas fa-spinner fa-spin"></i></div>';
      
      try {
        const commentsSnapshot = await db.collection(getCollectionName(postType))
          .doc(postId)
          .collection('comments')
          .orderBy('timestamp', 'desc')
          .get();
        
        if (commentsSnapshot.empty) {
          commentsList.innerHTML = '<div style="text-align: center; padding: 10px; color: var(--text-gray);">No hay comentarios</div>';
          return;
        }
        
        // Obtener datos de los usuarios que comentaron
        const commentsData = await Promise.all(
          commentsSnapshot.docs.map(async doc => {
            const commentData = doc.data();
            let userData = userCache[commentData.userId];
            if (!userData) {
              const userDoc = await db.collection('users').doc(commentData.userId).get();
              if (userDoc.exists) {
                userData = userDoc.data();
                userCache[commentData.userId] = userData;
              } else {
                userData = {
                  displayName: 'Usuario',
                  photoURL: 'img/default-profile.jpg',
                  email: ''
                };
              }
            }
            return {
              ...commentData,
              id: doc.id,
              userData: userData
            };
          })
        );
        
        commentsList.innerHTML = commentsData.map(comment => `
          <div class="comment">
            <img src="${comment.userData.photoURL}" 
                 alt="Avatar" 
                 class="comment-avatar"
                 onclick="viewUserProfile('${comment.userId}')">
            <div class="comment-content">
              <div class="comment-user" onclick="viewUserProfile('${comment.userId}')">
                ${comment.userData.displayName}
              </div>
              <div class="comment-text">${comment.text}</div>
            </div>
          </div>
        `).join('');
      } catch (error) {
        console.error("Error al cargar comentarios:", error);
        commentsList.innerHTML = '<div style="text-align: center; padding: 10px; color: var(--text-gray);">Error al cargar comentarios</div>';
      }
    }

    // Publicar comentario
    async function postComment(postType, postId, event) {
      event.preventDefault();
      const form = event.target;
      const input = form.querySelector('.comment-input');
      const commentText = input.value.trim();
      
      if (!commentText) return;
      
      try {
        // Agregar comentario a Firestore
        await db.collection(getCollectionName(postType))
          .doc(postId)
          .collection('comments')
          .add({
            userId: currentUser.uid,
            text: commentText,
            timestamp: firebase.firestore.FieldValue.serverTimestamp()
          });
        
        // Incrementar contador de comentarios
        await db.collection(getCollectionName(postType))
          .doc(postId)
          .update({
            comments: firebase.firestore.FieldValue.increment(1)
          });
        
        // Limpiar input
        input.value = '';
        
        // Recargar comentarios
        loadComments(postType, postId);
        
        // Actualizar contador en la interfaz
        const statsElement = form.closest('.post-card').querySelector('.post-stats');
        const commentsCount = parseInt(statsElement.textContent.match(/comentarios.*?(\d+)/)[1]);
        statsElement.innerHTML = statsElement.innerHTML.replace(
          /(<i class="fas fa-comment"><\/i> )\d+/,
          `$1${commentsCount + 1}`
        );
        
        // Actualizar en el modal si está abierto
        if (currentModalPost && currentModalPost.id === postId && currentModalPost.type === postType) {
          const modalCommentsCount = document.getElementById('postModalComments');
          modalCommentsCount.textContent = parseInt(modalCommentsCount.textContent) + 1;
          
          // Si la sección de comentarios está visible, recargar
          const commentsSection = document.getElementById('postModalCommentsSection');
          if (commentsSection.style.display === 'block') {
            loadPostModalComments();
          }
        }
      } catch (error) {
        console.error("Error al publicar comentario:", error);
        showNotification('Error al publicar comentario', 'error');
      }
    }

    // Ver detalle de una publicación
    function viewPostDetail(type, postId) {
      console.log(`Viendo detalle de publicación ${postId} de tipo ${type}`);
      window.location.href = `detalle.html?type=${type}&id=${postId}`;
    }

    // Obtener nombre de colección según tipo
    function getCollectionName(type) {
      switch(type) {
        case 'gallos': return 'PublicGallo';
        case 'entrenamientos': return 'PublicEntrenamiento';
        case 'peleas': return 'PublicPelea';
        default: return '';
      }
    }

    // Mostrar notificación
    function showNotification(message, type) {
      const notification = document.getElementById('notification');
      const notificationText = document.getElementById('notificationText');
      
      notificationText.textContent = message;
      notification.className = `notification ${type} show`;
      
      setTimeout(() => {
        notification.classList.remove('show');
      }, 3000);
    }
  </script>
