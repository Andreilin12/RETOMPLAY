    // Alternar like en el modal de publicación
    async function togglePostModalLike() {
      if (!currentModalPost) return;
      
      const post = currentModalPost;
      const likeBtn = document.getElementById('postModalLikeBtn');
      const likeIcon = likeBtn.querySelector('i');
      const likesCount = document.getElementById('postModalLikes');
      const postKey = `${post.type}_${post.id}`;
      
      try {
        const collectionName = getCollectionName(post.type);
        const postRef = db.collection(collectionName).doc(post.id);
        
        if (likedPosts.has(postKey)) {
          // Quitar like
          await postRef.update({
            likes: firebase.firestore.FieldValue.arrayRemove(currentUser.uid)
          });
          
          likedPosts.delete(postKey);
          likeIcon.classList.remove('liked');
          likeBtn.innerHTML = '<i class="fas fa-heart"></i> Me gusta';
          likesCount.textContent = parseInt(likesCount.textContent) - 1;
        } else {
          // Dar like
          await postRef.update({
            likes: firebase.firestore.FieldValue.arrayUnion(currentUser.uid)
          });
          
          likedPosts.add(postKey);
          likeIcon.classList.add('liked');
          likeBtn.innerHTML = '<i class="fas fa-heart liked"></i> Me gusta';
          likesCount.textContent = parseInt(likesCount.textContent) + 1;
        }
        
        // Actualizar like en todas las instancias de esta publicación
        updateLikeInAllPosts(post.type, post.id, likedPosts.has(postKey));
        
      } catch (error) {
        console.error("Error al actualizar like:", error);
        showNotification('Error al actualizar like', 'error');
      }
    }

    // Actualizar like en todas las instancias de una publicación
    function updateLikeInAllPosts(postType, postId, hasLike) {
      // Actualizar en posts principales
      const likeButtons = document.querySelectorAll(`[onclick="toggleLike('${postType}', '${postId}', this)"]`);
      likeButtons.forEach(button => {
        const icon = button.querySelector('i');
        if (hasLike) {
          icon.classList.add('liked');
          button.innerHTML = '<i class="fas fa-heart liked"></i> Me gusta';
        } else {
          icon.classList.remove('liked');
          button.innerHTML = '<i class="fas fa-heart"></i> Me gusta';
        }
      });
      
      // Actualizar contadores de likes
      const likeCounters = document.querySelectorAll(`#comments-${postId}`);
      likeCounters.forEach(container => {
        const stats = container.previousElementSibling.querySelector('.post-stats');
        if (stats) {
          const currentCount = parseInt(stats.textContent.match(/\d+/)[0]);
          stats.innerHTML = `
            <span><i class="fas fa-heart"></i> ${hasLike ? currentCount + 1 : currentCount - 1} likes</span>
            ${stats.innerHTML.includes('comentarios') ? 
              stats.innerHTML.split('</span>')[1] : ''}
          `;
        }
      });
    }

