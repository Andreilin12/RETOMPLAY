    // Buscar usuarios con filtrado en tiempo real
    async function searchUsers(query) {
      const searchResults = document.getElementById('searchResults');
      
      if (query.length < 2) {
        searchResults.innerHTML = '';
        searchResults.classList.remove('active');
        return;
      }
      
      try {
        // Primero buscar en caché
        const cachedResults = Object.values(userCache).filter(user => 
          user.displayName.toLowerCase().includes(query.toLowerCase()) || 
          user.email.toLowerCase().includes(query.toLowerCase())
        );
        
        if (cachedResults.length > 0) {
          displaySearchResults(cachedResults, searchResults);
          return;
        }
        
        // Si no hay resultados en caché, buscar en Firestore
        const usersSnapshot = await db.collection('users')
          .where('keywords', 'array-contains', query.toLowerCase())
          .limit(10)
          .get();
        
        if (usersSnapshot.empty) {
          searchResults.innerHTML = '<div class="search-result-item">No se encontraron usuarios</div>';
          searchResults.classList.add('active');
          return;
        }
        
        const usersData = [];
        usersSnapshot.forEach(doc => {
          const user = doc.data();
          user.id = doc.id;
          usersData.push(user);
          // Almacenar en caché
          userCache[doc.id] = user;
        });
        
        displaySearchResults(usersData, searchResults);
        
      } catch (error) {
        console.error("Error al buscar usuarios:", error);
        searchResults.innerHTML = '<div class="search-result-item">Error al buscar usuarios</div>';
        searchResults.classList.add('active');
      }
    }

    // Mostrar resultados de búsqueda
    function displaySearchResults(users, searchResults) {
      searchResults.innerHTML = '';
      
      users.forEach(user => {
        if (user.id !== currentUser.uid) {
          const item = document.createElement('div');
          item.className = 'search-result-item';
          item.innerHTML = `
            <img src="${user.photoURL || 'img/default-profile.jpg'}" class="search-result-avatar">
            <div>
              <div>${user.displayName || 'Usuario'}</div>
              <small>${user.email || ''}</small>
            </div>
          `;
          item.onclick = () => {
            viewUserProfile(user.id);
            document.querySelector('.search-input').classList.remove('active');
            searchResults.classList.remove('active');
          };
          searchResults.appendChild(item);
        }
      });
      
      searchResults.classList.add('active');
    }

    // Configurar controles de video
    function setupVideoControls() {
      document.addEventListener('click', function(e) {
        // Reproducir/pausar al hacer clic en el video
        if (e.target.tagName === 'VIDEO') {
          const video = e.target;
          if (video.paused) {
            video.play().catch(err => {
              console.error("Error al reproducir video:", err);
            });
          } else {
            video.pause();
          }
        }
        
        // Botón de pantalla completa (ahora se activa al tocar el video)
        if (e.target.tagName === 'VIDEO' || e.target.classList.contains('video-container')) {
          const videoContainer = e.target.tagName === 'VIDEO' ? 
                               e.target.parentElement : e.target;
          
          // Solo videos verticales (shorts) tendrán navegación por gestos
          if (videoContainer.classList.contains('short')) {
            toggleFullscreen(videoContainer);
          }
        }
      });
    }

    // Alternar pantalla completa
    function toggleFullscreen(element) {
      if (!document.fullscreenElement) {
        // Guardar referencia a los posts de video para navegación
        videoPosts = allPosts.filter(post => post.type !== 'gallos');
        
        element.requestFullscreen().catch(err => {
          console.error(`Error al entrar en pantalla completa: ${err.message}`);
        });
      } else {
        document.exitFullscreen();
      }
    }

    // Determinar si un video es vertical (short) u horizontal
    function isVideoShort(videoUrl) {
      return new Promise((resolve) => {
        const video = document.createElement('video');
        video.src = videoUrl + '#t=0.1';
        
        video.onloadedmetadata = () => {
          resolve(video.videoHeight > video.videoWidth);
        };
        
        video.onerror = () => {
          resolve(false); // Por defecto asumimos que no es short si hay error
        };
      });
    }

