    // Publicar comentario en el modal
    async function postModalComment(event) {
      event.preventDefault();
      if (!currentModalPost) return;
      
      const post = currentModalPost;
      const input = document.getElementById('postModalCommentInput');
      const commentText = input.value.trim();
      
      if (!commentText) return;
      
      try {
        // Agregar comentario a Firestore
        await db.collection(getCollectionName(post.type))
          .doc(post.id)
          .collection('comments')
          .add({
            userId: currentUser.uid,
            text: commentText,
            timestamp: firebase.firestore.FieldValue.serverTimestamp()
          });
        
        // Incrementar contador de comentarios
        await db.collection(getCollectionName(post.type))
          .doc(post.id)
          .update({
            comments: firebase.firestore.FieldValue.increment(1)
          });
        
        // Actualizar contador en el modal
        const commentsCount = document.getElementById('postModalComments');
        commentsCount.textContent = parseInt(commentsCount.textContent) + 1;
        
        // Limpiar input
        input.value = '';
        
        // Recargar comentarios
        await loadPostModalComments();
        
        // Actualizar contador en todas las instancias de esta publicación
        updateCommentCountInAllPosts(post.type, post.id, parseInt(commentsCount.textContent));
        
      } catch (error) {
        console.error("Error al publicar comentario:", error);
        showNotification('Error al publicar comentario', 'error');
      }
    }

    // Actualizar contador de comentarios en todas las instancias de una publicación
    function updateCommentCountInAllPosts(postType, postId, count) {
      // Actualizar en posts principales
      const commentSections = document.querySelectorAll(`#comments-${postId}`);
      commentSections.forEach(section => {
        const stats = section.previousElementSibling.querySelector('.post-stats');
        if (stats) {
          stats.innerHTML = stats.innerHTML.replace(
            /(<i class="fas fa-comment"><\/i> )\d+/,
            `$1${count}`
          );
        }
      });
    }

