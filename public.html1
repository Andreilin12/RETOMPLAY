    // Configurar eventos para pantalla completa
    function setupFullscreenEvents() {
      document.addEventListener('fullscreenchange', handleFullscreenChange);
      document.addEventListener('webkitfullscreenchange', handleFullscreenChange);
      document.addEventListener('mozfullscreenchange', handleFullscreenChange);
      document.addEventListener('MSFullscreenChange', handleFullscreenChange);
    }

    // Manejar cambios en pantalla completa
    function handleFullscreenChange() {
      const isFullscreen = document.fullscreenElement || 
                          document.webkitFullscreenElement || 
                          document.mozFullScreenElement || 
                          document.msFullscreenElement;
      
      if (isFullscreen) {
        // Entramos en pantalla completa
        fullscreenVideo = document.fullscreenElement || 
                         document.webkitFullscreenElement || 
                         document.mozFullScreenElement || 
                         document.msFullscreenElement;
        
        // Configurar eventos de deslizamiento
        setupSwipeEvents(fullscreenVideo);
        
        // Mostrar indicador de deslizamiento
        showSwipeIndicator();
      } else {
        // Salimos de pantalla completa
        if (fullscreenVideo) {
          fullscreenVideo.removeEventListener('touchstart', handleTouchStart);
          fullscreenVideo.removeEventListener('touchmove', handleTouchMove);
          fullscreenVideo.removeEventListener('touchend', handleTouchEnd);
          fullscreenVideo = null;
        }
      }
    }

    // Mostrar indicador de deslizamiento
    function showSwipeIndicator() {
      const indicator = document.getElementById('swipeIndicator');
      indicator.style.display = 'block';
      
      setTimeout(() => {
        indicator.style.opacity = '1';
      }, 100);
      
      setTimeout(() => {
        indicator.style.opacity = '0';
        setTimeout(() => {
          indicator.style.display = 'none';
        }, 300);
      }, 3000);
    }

    // Configurar eventos de deslizamiento
    function setupSwipeEvents(element) {
      element.addEventListener('touchstart', handleTouchStart, { passive: false });
      element.addEventListener('touchmove', handleTouchMove, { passive: false });
      element.addEventListener('touchend', handleTouchEnd, { passive: true });
    }

    // Manejar inicio de toque
    function handleTouchStart(e) {
      startY = e.touches[0].clientY;
      isSwiping = false;
    }

    // Manejar movimiento de toque
    function handleTouchMove(e) {
      if (!fullscreenVideo) return;
      
      const currentY = e.touches[0].clientY;
      const diffY = startY - currentY;
      
      if (Math.abs(diffY) > 10) {
        isSwiping = true;
        e.preventDefault();
      }
    }

    // Manejar fin de toque
    function handleTouchEnd(e) {
      if (!fullscreenVideo || !isSwiping) return;
      
      const endY = e.changedTouches[0].clientY;
      const diffY = startY - endY;
      
      if (Math.abs(diffY) > 50) { // Umbral mínimo para considerar un deslizamiento
        if (diffY > 0) {
          // Deslizamiento hacia arriba - siguiente video
          navigateVideo('next');
        } else {
          // Deslizamiento hacia abajo - video anterior
          navigateVideo('prev');
        }
      }
      
      isSwiping = false;
    }

    // Navegar entre videos en pantalla completa
    function navigateVideo(direction) {
      if (!videoPosts.length) return;
      
      const spinner = document.getElementById('loadingSpinner');
      spinner.style.display = 'block';
      
      // Encontrar el índice del video actual
      const currentVideoSrc = fullscreenVideo.querySelector('video').src.split('?')[0];
      currentPostIndex = videoPosts.findIndex(post => post.mediaUrl === currentVideoSrc);
      
      if (direction === 'next') {
        currentPostIndex = (currentPostIndex + 1) % videoPosts.length;
      } else {
        currentPostIndex = (currentPostIndex - 1 + videoPosts.length) % videoPosts.length;
      }
      
      // Cargar el nuevo video
      const nextPost = videoPosts[currentPostIndex];
      const videoContainer = fullscreenVideo;
      
      // Mostrar loading y miniatura mientras carga
      videoContainer.innerHTML = `
        <div class="video-loading">
          <i class="fas fa-spinner fa-spin"></i>
        </div>
        <img src="${nextPost.mediaUrl.replace('.mp4', '.jpg') || 'img/default-video.jpg'}" class="video-thumbnail">
        <video autoplay controls>
          <source src="${nextPost.mediaUrl}" type="video/mp4">
          Tu navegador no soporta videos HTML5.
        </video>
      `;
      
      const video = videoContainer.querySelector('video');
      video.addEventListener('loadeddata', () => {
        // Ocultar loading y miniatura cuando el video está listo
        videoContainer.querySelector('.video-loading').style.display = 'none';
        videoContainer.querySelector('.video-thumbnail').style.display = 'none';
        spinner.style.display = 'none';
        
        // Asegurarse de que el video sigue en pantalla completa
        if (!document.fullscreenElement && !document.webkitFullscreenElement && 
            !document.mozFullScreenElement && !document.msFullscreenElement) {
          videoContainer.requestFullscreen().catch(err => {
            console.error('Error al mantener pantalla completa:', err);
          });
        }
        
        // Registrar como visto
        addToHistory(nextPost.type, nextPost.id);
      });
      
      video.addEventListener('error', () => {
        spinner.style.display = 'none';
        showNotification('Error al cargar el video', 'error');
      });
    }

    // Agregar video al historial
    async function addToHistory(postType, postId) {
      const postKey = `${postType}_${postId}`;
      
      if (!viewedVideos.has(postKey)) {
        viewedVideos.add(postKey);
        
        try {
          await db.collection('userHistory').doc(currentUser.uid).set({
            viewedPosts: Array.from(viewedVideos),
            lastUpdated: firebase.firestore.FieldValue.serverTimestamp()
          }, { merge: true });
        } catch (error) {
          console.error("Error al guardar historial:", error);
        }
      }
    }

