        // Obtener todas las publicaciones del usuario
        const [gallosSnapshot, entrenamientosSnapshot, peleasSnapshot] = await Promise.all([
          db.collection('PublicGallo').where('userId', '==', userId).get(),
          db.collection('PublicEntrenamiento').where('userId', '==', userId).get(),
          db.collection('PublicPelea').where('userId', '==', userId).get()
        ]);
        
        const postsGrid = document.getElementById('profilePostsGrid');
        postsGrid.innerHTML = '';
        
        // Combinar todas las publicaciones
        const userPosts = [];
        
        gallosSnapshot.forEach(doc => {
          userPosts.push({...doc.data(), id: doc.id, type: 'gallos'});
        });
        
        entrenamientosSnapshot.forEach(doc => {
          userPosts.push({...doc.data(), id: doc.id, type: 'entrenamientos'});
        });
        
        peleasSnapshot.forEach(doc => {
          userPosts.push({...doc.data(), id: doc.id, type: 'peleas'});
        });
        
