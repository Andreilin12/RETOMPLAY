    // Mostrar publicaciones en el contenedor
    async function displayPosts(posts) {
      const container = document.getElementById('postsContainer');
      
      if (posts.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <i class="fas fa-box-open"></i>
            <p>No hay publicaciones disponibles</p>
          </div>
        `;
        return;
      }
      
      container.innerHTML = '';
      
      // Procesar cada publicación
      for (const post of posts) {
        // Obtener datos del usuario desde caché o Firestore
        let userData = userCache[post.userId];
        if (!userData) {
          const userDoc = await db.collection('users').doc(post.userId).get();
          if (userDoc.exists) {
            userData = userDoc.data();
            userCache[post.userId] = userData;
          } else {
            userData = {
              displayName: 'Usuario',
              photoURL: 'img/default-profile.jpg',
              email: ''
            };
          }
        }
        
        // Formatear fecha
        let postDate = 'Fecha no disponible';
        if (post.timestamp && post.timestamp.toDate) {
          try {
            postDate = post.timestamp.toDate().toLocaleDateString('es-ES', {
              day: '2-digit',
              month: '2-digit',
              year: 'numeric',
              hour: '2-digit',
              minute: '2-digit'
            });
          } catch (error) {
            console.error("Error al formatear fecha:", error);
          }
        }
        
        // Determinar si el usuario actual dio like a esta publicación
        const hasLike = likedPosts.has(`${post.type}_${post.id}`);
        
        // Determinar el contenido multimedia según el tipo
        let mediaContent = '';
        if (post.type === 'gallos') {
          mediaContent = `
            <div class="post-media-container">
              <img src="${post.mediaUrl}" alt="${post.title}" class="post-image" 
                   onclick="expandImage('${post.mediaUrl}')" 
                   onerror="this.onerror=null;this.src='img/default-image.jpg'">
            </div>
          `;
        } else {
          // Determinar si es un video short (vertical) o normal (horizontal)
          const isShort = await isVideoShort(post.mediaUrl);
          
          mediaContent = `
            <div class="post-media-container">
              <div class="video-container ${isShort ? 'short' : 'normal'}">
                <div class="video-loading">
                  <i class="fas fa-spinner fa-spin"></i>
                </div>
                <img src="${post.mediaUrl.replace('.mp4', '.jpg') || 'img/default-video.jpg'}" class="video-thumbnail">
                <video controls playsinline>
                  <source src="${post.mediaUrl}" type="video/mp4">
                  Tu navegador no soporta videos HTML5.
                </video>
              </div>
            </div>
          `;
        }
        
        // Crear elemento de publicación
        const postElement = document.createElement('div');
        postElement.className = 'post-card';
        postElement.innerHTML = `
          <div class="post-header">
            <img src="${userData.photoURL}" alt="Avatar" class="user-avatar" 
                 onclick="viewUserProfile('${post.userId}')">
            <div class="user-info">
              <div class="user-name" onclick="viewUserProfile('${post.userId}')">${userData.displayName}</div>
              <div class="post-time">${postDate}</div>
            </div>
            ${post.userId !== currentUser.uid ? 
              `<button class="follow-btn" id="followBtn-${post.userId}" onclick="toggleFollow('${post.userId}', this)">
                <i class="fas fa-user-plus"></i> Seguir
              </button>` : ''
            }
          </div>
          <div class="post-content">
            <h3 class="post-title">${post.title || 'Sin título'}</h3>
            <p class="post-description">${post.description || 'Sin descripción'}</p>
            ${mediaContent}
          </div>
          <div class="post-footer">
            <div class="post-actions">
              <button class="action-btn" onclick="toggleLike('${post.type}', '${post.id}', this)">
                <i class="fas fa-heart ${hasLike ? 'liked' : ''}"></i> Me gusta
              </button>
              <button class="action-btn" onclick="toggleComments('${post.type}', '${post.id}', this)">
                <i class="fas fa-comment"></i> Comentar
              </button>
            </div>
            <div class="post-stats">
              <span><i class="fas fa-heart"></i> ${post.likes?.length || 0} likes</span>
              <span style="margin-left: 10px;"><i class="fas fa-comment"></i> ${post.comments || 0} comentarios</span>
            </div>
          </div>
          <div class="comments-section" id="comments-${post.id}">
            <div class="comments-list" id="commentsList-${post.id}">
              <!-- Los comentarios se cargarán aquí -->
            </div>
            <form class="comment-form" onsubmit="postComment('${post.type}', '${post.id}', event)">
              <input type="text" class="comment-input" placeholder="Escribe un comentario..." required>
              <button type="submit" class="comment-submit">Publicar</button>
            </form>
          </div>
        `;
        
        container.appendChild(postElement);
        
        // Configurar estado del botón de seguir
        if (post.userId !== currentUser.uid) {
          setupFollowButton(post.userId);
        }
        
        // Configurar eventos de video para mostrar loading y miniatura
        if (post.type !== 'gallos') {
          const videoContainer = postElement.querySelector('.video-container');
          const video = videoContainer.querySelector('video');
          const loading = videoContainer.querySelector('.video-loading');
          const thumbnail = videoContainer.querySelector('.video-thumbnail');
          
          video.addEventListener('loadeddata', () => {
            loading.style.display = 'none';
            thumbnail.style.display = 'none';
          });
          
          video.addEventListener('play', () => {
            // Registrar como visto cuando se reproduce
            addToHistory(post.type, post.id);
          });
