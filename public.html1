  <script src="https://www.gstatic.com/firebasejs/10.12.2/firebase-firestore-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/10.12.2/firebase-storage-compat.js"></script>

  <script>
    // Configuración de Firebase
    const firebaseConfig = {
      apiKey: "AIzaSyDLi-egzQlgbKW8XV_qIhU6313Gd8gocCg",
      authDomain: "inventario-35d6b.firebaseapp.com",
      databaseURL: "https://inventario-35d6b-default-rtdb.firebaseio.com",
      projectId: "inventario-35d6b",
      storageBucket: "inventario-35d6b.appspot.com",
      messagingSenderId: "266100399659",
      appId: "1:266100399659:web:92358d28cbd803c8a7d46e"
    };

    // Inicializar Firebase
    firebase.initializeApp(firebaseConfig);
    const auth = firebase.auth();
    const db = firebase.firestore();
    const storage = firebase.storage();

    // Variables globales
    let currentUser = null;
    let allPosts = [];
    let currentFilter = 'all';
    let currentProfileUserId = null;
    let currentProfileUserData = null;
    let currentVideo = null;
    let fullscreenVideo = null;
    let startY = 0;
    let isSwiping = false;
    let currentPostIndex = 0;
    let videoPosts = [];
    let currentModalPost = null;
    let likedPosts = new Set();
    let userCache = {};
    let newNotifications = 0;
    let notificationPosts = [];
    let viewedVideos = new Set();
    let selectedFile = null;

    // Inicializar la aplicación
    document.addEventListener('DOMContentLoaded', () => {
      auth.onAuthStateChanged(user => {
        if (user) {
          currentUser = user;
          loadAllPosts();
          loadLikedPosts();
          loadViewedVideos();
          loadNewNotifications();
          
          // Configurar eventos de video
          setupVideoControls();
          setupFullscreenEvents();
          
          // Configurar menú activo
          document.querySelector('.menu-item[onclick="showSection(\'homeSection\')"]').classList.add('active');
          
          // Configurar eventos del formulario de publicación
          setupCreatePostForm();
        } else {
          window.location.href = 'login.html';
        }
      });
    });

    // Configurar formulario de creación de publicación
    function setupCreatePostForm() {
      const mediaUpload = document.getElementById('mediaUpload');
      const imagePreview = document.getElementById('imagePreview');
      const videoPreview = document.getElementById('videoPreview');
      const submitBtn = document.getElementById('submitPostBtn');
      
      mediaUpload.addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (!file) return;
        
        selectedFile = file;
        
        if (file.type.startsWith('image/')) {
          // Es una imagen
          videoPreview.style.display = 'none';
          videoPreview.src = '';
          
          const reader = new FileReader();
          reader.onload = function(e) {
            imagePreview.src = e.target.result;
            imagePreview.style.display = 'block';
            checkFormValidity();
          };
          reader.readAsDataURL(file);
        } else if (file.type.startsWith('video/')) {
          // Es un video
          imagePreview.style.display = 'none';
          imagePreview.src = '';
          
          videoPreview.src = URL.createObjectURL(file);
          videoPreview.style.display = 'block';
          checkFormValidity();
        }
      });
      
      // Validar formulario cuando cambian los campos
      document.getElementById('postType').addEventListener('change', checkFormValidity);
      document.getElementById('postTitle').addEventListener('input', checkFormValidity);
      
      // Enviar formulario
      document.getElementById('createPostForm').addEventListener('submit', createPost);
    }
    
    // Verificar si el formulario es válido
    function checkFormValidity() {
      const postType = document.getElementById('postType').value;
      const postTitle = document.getElementById('postTitle').value.trim();
      const submitBtn = document.getElementById('submitPostBtn');
      
      submitBtn.disabled = !(postType && postTitle && selectedFile);
    }
    
    // Mostrar modal para crear publicación
    function showCreatePostModal() {
      document.getElementById('createPostModal').style.display = 'block';
    }
    
    // Cerrar modal de creación de publicación
    function closeCreatePostModal() {
      document.getElementById('createPostModal').style.display = 'none';
      resetCreatePostForm();
    }
    
    // Resetear formulario de creación
    function resetCreatePostForm() {
      document.getElementById('createPostForm').reset();
      document.getElementById('imagePreview').style.display = 'none';
      document.getElementById('imagePreview').src = '';
      document.getElementById('videoPreview').style.display = 'none';
      document.getElementById('videoPreview').src = '';
      document.getElementById('submitPostBtn').disabled = true;
      selectedFile = null;
    }
    
    // Crear nueva publicación
    async function createPost(event) {
      event.preventDefault();
      
      const postType = document.getElementById('postType').value;
      const postTitle = document.getElementById('postTitle').value.trim();
      const postDescription = document.getElementById('postDescription').value.trim();
      const submitBtn = document.getElementById('submitPostBtn');
      
      if (!postType || !postTitle || !selectedFile) {
        showNotification('Completa todos los campos requeridos', 'error');
        return;
      }
      
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Publicando...';
      
      try {
        // Subir archivo a Firebase Storage
        const fileExtension = selectedFile.name.split('.').pop();
        const fileName = `${Date.now()}_${Math.random().toString(36).substring(2)}.${fileExtension}`;
        const storageRef = storage.ref().child(`posts/${currentUser.uid}/${fileName}`);
        const uploadTask = storageRef.put(selectedFile);
        
        // Esperar a que se complete la subida
        await uploadTask;
        
        // Obtener URL del archivo subido
        const downloadURL = await storageRef.getDownloadURL();
        
        // Crear documento en Firestore
        const collectionName = getCollectionName(postType);
        const newPost = {
          userId: currentUser.uid,
          title: postTitle,
          description: postDescription,
          mediaUrl: downloadURL,
          likes: [],
          comments: 0,
          timestamp: firebase.firestore.FieldValue.serverTimestamp()
        };
        
        await db.collection(collectionName).add(newPost);
        
        // Mostrar notificación de éxito
        showNotification('Publicación creada exitosamente', 'success');
        
        // Cerrar modal y resetear formulario
        closeCreatePostModal();
        
        // Recargar publicaciones
        loadAllPosts();
        
        // Enviar notificación a seguidores
        sendNotificationToFollowers(newPost, postType);
        
      } catch (error) {
        console.error("Error al crear publicación:", error);
        showNotification('Error al crear publicación', 'error');
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Publicar';
      }
    }
    
    // Enviar notificación a seguidores
    async function sendNotificationToFollowers(post, postType) {
      try {
        // Obtener lista de seguidores
        const followersSnapshot = await db.collection('followers')
          .doc(currentUser.uid)
          .collection('userFollowers')
          .get();
        
        if (followersSnapshot.empty) return;
        
        const batch = db.batch();
        const now = new Date();
        
        // Crear notificación para cada seguidor
        followersSnapshot.forEach(doc => {
          const notificationRef = db.collection('notifications')
            .doc(doc.id)
            .collection('userNotifications')
            .doc();
          
          batch.set(notificationRef, {
            type: 'new_post',
            postType: postType,
            postId: post.id,
            userId: currentUser.uid,
            title: post.title,
            message: `${currentUser.displayName || 'Un usuario'} ha publicado nuevo contenido`,
            timestamp: firebase.firestore.FieldValue.serverTimestamp(),
            expiresAt: new Date(now.getTime() + 24 * 60 * 60 * 1000), // Expira en 24 horas
            read: false
          });
        });
        
        await batch.commit();
        
      } catch (error) {
        console.error("Error al enviar notificaciones:", error);
      }
    }

    // Mostrar sección
    function showSection(sectionId) {
      // Ocultar todas las secciones
      document.querySelectorAll('.section').forEach(section => {
        section.classList.remove('active');
      });
      
      // Mostrar la sección seleccionada
      document.getElementById(sectionId).classList.add('active');
      
      // Actualizar menú activo
      document.querySelectorAll('.menu-item').forEach(item => {
        item.classList.remove('active');
      });
      event.currentTarget.classList.add('active');
      
      // Cargar contenido específico de la sección
      switch(sectionId) {
        case 'historySection':
          loadHistory();
          break;
        case 'followingSection':
          loadFollowingPosts();
          break;
        case 'notificationsSection':
          loadNotifications();
          break;
      }
    }

    // Cargar videos vistos (historial)
    async function loadViewedVideos() {
      try {
        const historyDoc = await db.collection('userHistory').doc(currentUser.uid).get();
        if (historyDoc.exists) {
          viewedVideos = new Set(historyDoc.data().viewedPosts || []);
        }
      } catch (error) {
        console.error("Error al cargar historial:", error);
      }
    }

    // Cargar posts que el usuario ha dado like
    async function loadLikedPosts() {
      try {
        // Limpiar el set de likes
        likedPosts = new Set();
        
        // Obtener likes de todas las colecciones
        const [gallosLikes, entrenamientosLikes, peleasLikes] = await Promise.all([
          db.collection('PublicGallo').where('likes', 'array-contains', currentUser.uid).get(),
          db.collection('PublicEntrenamiento').where('likes', 'array-contains', currentUser.uid).get(),
          db.collection('PublicPelea').where('likes', 'array-contains', currentUser.uid).get()
        ]);
        
        // Agregar IDs de posts con like
        gallosLikes.forEach(doc => likedPosts.add(`gallos_${doc.id}`));
        entrenamientosLikes.forEach(doc => likedPosts.add(`entrenamientos_${doc.id}`));
        peleasLikes.forEach(doc => likedPosts.add(`peleas_${doc.id}`));
        
      } catch (error) {
        console.error("Error al cargar posts con like:", error);
      }
    }

    // Cargar notificaciones nuevas
    async function loadNewNotifications() {
      try {
        const now = new Date();
        const twentyFourHoursAgo = new Date(now.getTime() - (24 * 60 * 60 * 1000));
        
        const notificationsSnapshot = await db.collection('notifications')
          .doc(currentUser.uid)
          .collection('userNotifications')
          .where('timestamp', '>=', twentyFourHoursAgo)
          .where('read', '==', false)
          .get();
        
        newNotifications = notificationsSnapshot.size;
        
        // Actualizar badge de notificaciones
        const badge = document.getElementById('notificationBadge');
        if (newNotifications > 0) {
          badge.textContent = newNotifications;
          badge.style.display = 'flex';
        } else {
          badge.style.display = 'none';
        }
        
      } catch (error) {
        console.error("Error al cargar notificaciones:", error);
      }
    }

    // Cargar notificaciones
    async function loadNotifications() {
      const container = document.getElementById('notificationsContainer');
      
      try {
        const now = new Date();
        const twentyFourHoursAgo = new Date(now.getTime() - (24 * 60 * 60 * 1000));
        
        const notificationsSnapshot = await db.collection('notifications')
          .doc(currentUser.uid)
          .collection('userNotifications')
          .where('timestamp', '>=', twentyFourHoursAgo)
          .orderBy('timestamp', 'desc')
          .get();
        
        if (notificationsSnapshot.empty) {
          container.innerHTML = `
            <div class="empty-state">
              <i class="fas fa-bell-slash"></i>
              <p>No hay notificaciones nuevas</p>
            </div>
          `;
          return;
        }
        
        container.innerHTML = '';
        
        // Procesar cada notificación
        for (const doc of notificationsSnapshot.docs) {
          const notification = doc.data();
          
          // Obtener datos del usuario que generó la notificación
          let userData = userCache[notification.userId];
          if (!userData) {
            const userDoc = await db.collection('users').doc(notification.userId).get();
            if (userDoc.exists) {
              userData = userDoc.data();
              userCache[notification.userId] = userData;
            } else {
              userData = {
                displayName: 'Usuario',
                photoURL: 'img/default-profile.jpg',
                email: ''
              };
            }
          }
          
          // Formatear fecha
